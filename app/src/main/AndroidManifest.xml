<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.syncroweb.biocomp20">

    <!-- Include required permissions for Google Mobile Ads to run-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--This meta-data tag is required to use Google Play services.-->
        <meta-data android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version"/>

        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainMenu"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Calculate"
            android:label="@string/calculate_compatibility"
            android:parentActivityName=".MainMenu"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syncroweb.biocomp20.MainMenu" />
        </activity>
        <activity
            android:name=".CalculateLoadOrNew"
            android:label="@string/load_or_new"
            android:parentActivityName=".Calculate"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syncroweb.biocomp20.Calculate" />
        </activity>
        <activity
            android:name=".ChooseDate"
            android:label="@string/choose_date"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Infos"
            android:label="@string/infos"
            android:parentActivityName=".MainMenu"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syncroweb.biocomp20.MainMenu" />
        </activity>
        <activity
            android:name=".Register"
            android:label="@string/enter_new_profile"
            android:parentActivityName=".RegisteredDateList"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syncroweb.biocomp20.RegisteredDateList" />
        </activity>
        <activity
            android:name=".RegisteredDateList"
            android:label="@string/your_date_list"
            android:parentActivityName=".MainMenu"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syncroweb.biocomp20.MainMenu" />
        </activity>
        <activity
            android:name=".OtherApps"
            android:label="@string/our_other_apps"
            android:parentActivityName=".MainMenu"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syncroweb.biocomp20.MainMenu" />
        </activity>
        <activity
            android:name=".LoadDate"
            android:label="Load Date"
            android:parentActivityName=".CalculateLoadOrNew"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syncroweb.biocomp20.CalculateLoadOrNew"
                android:screenOrientation="portrait"/>
        </activity>
        <activity
            android:name=".ChooseAvatar"
            android:label="Choose an Avatar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syncroweb.biocomp20.Register" />
        </activity>

        <!--Include the AdActivity configChanges and theme. -->
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
    </application>

</manifest>