<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.syncroweb.android.bio.OtherApps"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download our new app directly from the Google PlayStore."
        android:id="@+id/txtTitleOther"
        android:layout_alignParentTop="true"
        android:textSize="18dp"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btnImgOne"
        android:src="@drawable/italia"
        android:layout_marginLeft="16dp"
        android:tag="com.it.china"
        android:background="@drawable/italia"
        android:layout_below="@+id/txtTitleOther"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        />


    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btnImgTwo"
        android:src="@drawable/toro"
        android:layout_marginRight="16dp"
        android:background="@drawable/toro"
        android:tag="it.com.toro"
        android:layout_alignTop="@+id/btnImgOne"
        android:layout_alignParentEnd="true" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sfondi Italiani"
        android:id="@+id/lblSfondItalia"
        android:layout_below="@+id/btnImgOne"
        android:layout_alignLeft="@+id/btnImgOne"
        android:layout_alignRight="@+id/btnImgOne"
        android:gravity="center"
        android:textSize="14dp"
        android:layout_marginTop="12dp" />

    <TextView  android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sfondi Granata"
        android:id="@+id/lblSfondiGranata"
        android:layout_below="@+id/btnImgTwo"
        android:layout_alignLeft="@+id/btnImgTwo"
        android:layout_alignRight="@+id/btnImgTwo"
        android:gravity="center"
        android:textSize="14dp"
        android:layout_marginTop="12dp" />

    <Button android:layout_width="210dp"
        android:layout_height="80dp"
        android:id="@+id/btnSyncroweb"
        android:background="@drawable/logo"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For info or any questions, please visit our web site."
        android:id="@+id/textView"
        android:textSize="18dp"
        android:layout_below="@+id/lblSfondItalia"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp" />

    <com.google.android.gms.ads.AdView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adsOther"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/prova_banner"/>


</RelativeLayout>
