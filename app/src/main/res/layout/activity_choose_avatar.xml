<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_choose_avatar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.syncroweb.android.bio.ChooseAvatar"
    android:background="#ffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scegli_avatar"
        android:id="@+id/textView4"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/linear1"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/girl"
            android:layout_weight="1"
            android:id="@+id/imgLY1"
            android:onClick="press"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/girl2"
            android:layout_weight="1"
            android:id="@+id/imgLY2"
            android:onClick="press"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/girl3"
            android:layout_weight="1"
            android:id="@+id/imgLY3"
            android:onClick="press"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/linear2"
        android:layout_below="@id/linear1"
        android:layout_marginTop="24dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/man"
            android:layout_weight="1"
            android:id="@+id/imgLY4"
            android:onClick="press"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/man2"
            android:layout_weight="1"
            android:id="@+id/imgLY5"
            android:onClick="press"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/man3"
            android:layout_weight="1"
            android:id="@+id/imgLY6"
            android:onClick="press"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/girl4"
            android:layout_weight="1"
            android:id="@+id/imgLY7"
            android:onClick="press"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/man4"
            android:layout_weight="1"
            android:id="@+id/imgLY8"
            android:onClick="press"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/girl5"
            android:layout_weight="1"
            android:id="@+id/imgLY9"
            android:onClick="press"/>
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adsChooseAvatar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/prova_banner"/>

</RelativeLayout>
