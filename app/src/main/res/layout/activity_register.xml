<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.syncroweb.biocomp20.RegisterOrLoadDate"
    android:background="#fafafa">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/photoRegister"
        android:src="@drawable/girl"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save changes"
        android:id="@+id/btnSaveChanges"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"/>


    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/txtNameSurname"
        android:height="50dp"
        android:singleLine="true"
        android:inputType="text"
        android:layout_below="@+id/lblNominativo"
        android:layout_toEndOf="@+id/photoRegister"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp" />

    <TextView   android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:id="@+id/lblBirthDate"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_below="@+id/photoRegister"
        android:layout_alignParentStart="false"
        android:layout_marginTop="16dp" />


    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:layout_below="@+id/lblBirthDate"
        android:layout_centerHorizontal="true"
        android:datePickerMode="spinner"
        android:layout_above="@+id/btnSaveChanges"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/lblNominativo"
        android:textSize="18dp"
        android:layout_alignTop="@+id/photoRegister"
        android:layout_alignStart="@+id/txtNameSurname"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:id="@+id/radioMale"
        android:layout_below="@+id/txtNameSurname"
        android:layout_alignStart="@+id/txtNameSurname"
        android:checked="false"
        android:layout_marginTop="16dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:id="@+id/radioFemale"
        android:checked="false"
        android:layout_below="@+id/txtNameSurname"
        android:layout_alignEnd="@+id/txtNameSurname"
        android:layout_marginTop="16dp" />



</RelativeLayout>