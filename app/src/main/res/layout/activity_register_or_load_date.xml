<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save changes"
        android:id="@+id/btnSaveChanges"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/photoRegister"
        android:background="@drawable/girl"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/txtTitleRegister"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/txtNameSurname"
        android:height="50dp"
        android:singleLine="true"
        android:inputType="text"
        android:layout_below="@+id/lblNominativo"
        android:layout_toEndOf="@+id/photoRegister"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp" />

    <TextView   android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:id="@+id/lblBirthDate"
        android:textSize="22dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

<!--
    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:layout_below="@+id/lblBirthDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />
    -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/lblNominativo"
        android:textSize="22sp"
        android:layout_alignTop="@+id/photoRegister"
        android:layout_alignStart="@+id/txtNameSurname"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PROFILE"
        android:id="@+id/txtTitleRegister"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lblBirthDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/linearLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day"
        android:id="@+id/lblDay"
        android:textSize="22sp"
        android:layout_below="@+id/lblBirthDate"
        android:layout_weight="1"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Month"
        android:id="@+id/lblMonth"
        android:textSize="22sp"
        android:layout_below="@+id/lblBirthDate"
        android:layout_weight="1"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year"
        android:id="@+id/lblYear"
        android:textSize="22sp"
        android:layout_below="@+id/lblBirthDate"
        android:layout_weight="2"
        android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnSaveChanges"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_marginTop="44dp">

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/npDay"
            android:layout_weight="1" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/npMonth"
            android:layout_weight="1"/>

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/npYear"
            android:layout_weight="2"/>
    </LinearLayout>

</RelativeLayout>